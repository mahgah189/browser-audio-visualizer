{
  "name": "Browser Audio Visualizer",
  "description": "A Chrome extension to visualize browser audio",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "tabCapture",
    "scripting",
    "offscreen",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Browser Audio Visualizer",
    "default_popup": "popup.html"
  }
}